{
  "name": "@gmzh/react-ui",
  "license": "MIT",
  "version": "0.2.7",
  "description": "A modern React UI component library with TypeScript",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/ge-m-zhang/react-ui",
    "directory": "packages/@react-ui"
  },
  "homepage": "https://storybook-react-ui.vercel.app",
  "publishConfig": {
    "access": "public",
    "keywords": [
      "react",
      "components",
      "ui",
      "typescript",
      "design-system"
    ],
    "author": "GMZhang"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles": "./dist/styles.css",
    "./tailwind-plugin": "./tailwind-plugin.js",
    "./lib/*": {
      "types": "./dist/lib/*",
      "import": "./dist/lib/*"
    },
    "./src/*": "./src/*"
  },
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run fix:cjs && npm run build:css && npm run copy:plugin && npm run bundle:stories",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "fix:cjs": "node scripts/fix-cjs-extensions.js",
    "build:css": "tailwindcss -i ./src/lib/system/globals.css -o ./dist/styles.css --minify",
    "copy:plugin": "cp tailwind-plugin.js dist/",
    "bundle:stories": "tsc --project tsconfig.stories.json",
    "dev": "npm run dev:ts",
    "dev:ts": "tsc --watch",
    "dev:css": "tailwindcss -i ./src/lib/system/globals.css -o ./dist/styles.css --watch",
    "dev:concurrent": "concurrently \"npm run dev:ts\" \"npm run dev:css\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist dist-cjs",
    "prepublishOnly": "npm run build",
    "postpublish": "echo \"Successfully published @gmzh/react-ui@$(node -p \"require('./package.json').version\")\""
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.56.0",
    "react": "^18.2.0",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.1",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "files": [
    "dist/**/*",
    "tailwind-plugin.js",
    "README.md"
  ]
}
